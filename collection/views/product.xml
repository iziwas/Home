<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="collection_product_form_view">
            <field name="name">collection_product_form_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <form position="attributes">
                    <attribute name="string">Collection's element</attribute>
                </form>

                <xpath expr="//div[@name='options']" position="replace" />
                <xpath expr="//notebook/page[@name='sales']" position="replace" />
                <xpath expr="//notebook/page[@name='purchase']" position="replace" />
                <xpath expr="//group[@name='group_standard_price']" position="replace" />

                <field name="type" position="after">
                    <field name="categ_id" position="move" />
                    <field name="ebook_file"
                           attrs="{'invisible': [('categ_id',
                           '!=', 5)]}" />
                </field>
                <field name="default_code" position="replace" />
                <field name="barcode" position="attributes">
                    <attribute name="string">ISBN</attribute>
                </field>
                <field name="barcode" position="after">
                    <field name="author_id" domain="[('is_author', '=', True)]" />
                    <field name="editor_id" domain="[('is_editor', '=', True)]" />
                </field>
            </field>
        </record>
    </data>
</odoo>